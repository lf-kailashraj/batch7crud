<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <resource-ref>
    <res-ref-name>jdbc/db_userinfo_test</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <filter>
    <filter-name>UserFilter</filter-name>
    <filter-class>com.lftechnology.batch7crud.filter.UserFilter</filter-class>
    <init-param>
      <param-name>loginActionURI</param-name>
      <param-value>/login</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>UserFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>


  <filter>
    <display-name>ExceptionFilter</display-name>
    <filter-name>ExceptionFilter</filter-name>
    <filter-class>com.lftechnology.batch7crud.filter.ExceptionFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ExceptionFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <error-page>
    <error-code>500</error-code>
    <location>/WEB-INF/views/error-page.jsp</location>
  </error-page>

  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/views/error-page.jsp</location>
  </error-page>
</web-app>
