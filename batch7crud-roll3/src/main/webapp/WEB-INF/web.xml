<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <resource-ref>
    <description>none</description>
    <res-ref-name>jdbc/students_info</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <filter>
    <filter-name>AuthenticationFilter</filter-name>
    <filter-class>com.lftechnology.batch7crud.filter.AuthenticationFilter</filter-class>
     <init-param>
        <param-name>loginActionURI</param-name>
        <param-value>/userValidator</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>AuthenticationFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <description></description>
    <display-name>UserValidator</display-name>
    <servlet-name>UserValidator</servlet-name>
    <servlet-class>com.lftechnology.batch7crud.controller.UserValidator</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserValidator</servlet-name>
    <url-pattern>/userValidator</url-pattern>
  </servlet-mapping>
</web-app>