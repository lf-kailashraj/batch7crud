<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
  <resource-ref>
    <description>none
    </description>
    <res-ref-name>
      jdbc/formdb
    </res-ref-name>
    <res-type>
      javax.sql.DataSource
    </res-type>
    <res-auth>
      Container
    </res-auth>
  </resource-ref>
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/views/pageNotFound.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/WEB-INF/views/internalErrorPage.jsp</location>
  </error-page>
  <filter>
    <filter-name>ExceptionHandlerFilter</filter-name>
    <filter-class>com.lftechnology.batch7crud.filter.ExceptionFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ExceptionHandlerFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>UserFilter</filter-name>
    <filter-class>com.lftechnology.batch7crud.filter.AuthenticationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>UserFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>
